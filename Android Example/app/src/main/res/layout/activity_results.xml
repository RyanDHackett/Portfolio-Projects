<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent"
    android:rowCount="3"
    android:columnCount="1"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ryan.quizgameathome.ResultsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:text="You Scored: 10/10"
        android:id="@+id/txtScoreNumeric"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:textColor="@color/primary_material_dark"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="0"
        android:layout_rowSpan="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100%!"
        android:id="@+id/txtScorePercent"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="#ff0e8213"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="1"
        android:layout_rowSpan="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/StartOver"
        android:id="@+id/btnStartOver"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:textSize="35dp"
        android:textStyle="bold"
        android:padding="20dp" />
</GridLayout>
