<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:rowCount="5"
    android:columnCount="2"
    tools:context="com.example.ryan.quizgameathome.QuizActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test for: Name"
        android:id="@+id/txtQuizName"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question #"
        android:id="@+id/txtQuestionNum"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score Current/Total"
        android:id="@+id/txtCurrentScore"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/txtQuestion"
        android:layout_row="2"
        android:layout_rowSpan="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="These manage a shared set of application data. You can store the data in the file system, a SQLite database, on the web, or any other persistent storage location your application can access. Through the content provider, other applications can query or even modify the data (if the content provider allows it) and are also useful for reading and writing data that is private to your application and not shared. "
        android:textSize="12dp"
        android:textColor="@color/primary_material_dark"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal|top"
        android:gravity="clip_horizontal" />

    <Button
        android:layout_width="146dp"
        android:layout_height="120dp"
        android:id="@+id/btnAnsOne"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:layout_gravity="center|fill"
        android:textColor="@color/primary_material_dark"
        android:textSize="12dp" />

    <Button
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnAnsTwo"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_gravity="center|fill"
        android:layout_columnSpan="1"
        android:textColor="@color/primary_material_dark"
        android:textSize="12dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/btnAnsThree"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="4"
        android:layout_rowSpan="1"
        android:layout_gravity="center|fill"
        android:textColor="@color/primary_material_dark"
        android:textSize="12dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAnsFour"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_row="4"
        android:layout_rowSpan="1"
        android:layout_gravity="center|fill"
        android:textColor="@color/primary_material_dark"
        android:textSize="12dp" />

</GridLayout>
